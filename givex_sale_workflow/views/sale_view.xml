<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_form_inherit">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_approve" string="Approve" type="object" attrs="{'invisible': [('state', 'not in', ['pending_approval', 'pending_ff_approval'])]}" groups="givex_sale_workflow.group_so_pending_approval,givex_sale_workflow.group_so_pending_ff_approval" class="btn-primary"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="request_approval" string="Request for Approval" type="object" attrs="{'invisible': [('state', 'not in', ['new'])]}" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>

