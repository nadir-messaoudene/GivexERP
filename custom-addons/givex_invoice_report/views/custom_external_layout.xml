<odoo>
  <data>
    <!-- Loyalty Lane [START] -->
    <template id="custom_header_template">
      <header class="invoice_header row" t-attf-style="font-family: 'Open Sans', sans-serif; font-size: 17px; font-weight: lighter;">
        <div class="col-4">
          <h1 class="website_name mb-0 mt-" t-attf-style="font-size: 23px; font-weight: bold;" >Loyalty Lane, Inc.</h1>
          <address class="warehouse_address" t-attf-style="font-size: 16px;">
            <p class="mb-0">3827 Roswell Road</p>
            <p class="mb-0">Suite 200C</p>
            <p class="mb-0">Marietta, GA 30062</p>
            <p class="mb-0">678-668-7200 (Ext. 4)</p>
            <p class="mb-0"><a href="mailto:accounting@loyaltylane.com" t-attf-style="color: #000; text-decoration: none;">accounting@loyaltylane.com</a></p>
          </address>
        </div>
        <div class="col-4 text-right" t-attf-style="color: #7b8dc5;">
          <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-width: 300px; max-height: 150px;" alt="Logo"/>
        </div>
        <div class="col-4 text-right" t-attf-style="color: #7b8dc5;">
          <h2>
            <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Invoice</span>
            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
            <span t-if="o.type == 'out_refund'">Credit Note</span>
            <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
            <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
            <span t-if="o.name != '/'" t-field="o.name"/>
          </h2>
        </div>
      </header>
    </template>

    <template id="custom_external_layout">
      <t t-if="not o" t-set="o" t-value="doc"/>

      <t t-if="not company">
        <t t-if="company_id">
          <t t-set="company" t-value="company_id"/>
        </t>
        <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
          <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-else="else">
          <t t-set="company" t-value="res_company"/>
        </t>
      </t>
      <t t-call="givex_invoice_report.custom_external_layout_standard"><t t-out="0"/></t>

    </template>

    <template id="custom_address_layout">
        <t t-set="colclass" t-value="('col-md-5' if report_type == 'html' else 'col-5') + ' ml-auto'"/>
        <t t-if="address">
            <div class="address row">
                <t t-if="information_block">
                    <t t-set="colclass" t-value="'col-5 offset-1'"/>
                    <div name="information_block" class="col-6">
                        <t t-raw="information_block"/>
                    </div>
                </t>
                <div name="address" t-att-class="colclass">
                    <p><b>BILL TO:</b></p>
                    <t t-raw="address.replace('Attention:','')"/>
                </div>
            </div>
        </t>
    </template>

    <template id="custom_external_layout_standard">

      <!-- support for custom header -->
      <div t-attf-class="header o_company_#{company.id}_layout">
        <t t-call="givex_invoice_report.custom_header_template" t-lang="lang"/>
      </div>

      <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
        <t t-call="givex_invoice_report.custom_address_layout"/>
        <t t-out="0"/>
      </div>

      <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
          <div class="text-center" style="border-top: 1px solid black;">
              <ul class="list-inline mb4">
                  <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span class="o_force_ltr" t-field="company.phone"/></li>
                  <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                  <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                  <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
              </ul>

              <div name="financial_infos">
                  <span t-field="company.report_footer"/>
              </div>

              <div t-if="report_type == 'pdf'" class="text-muted">
                  Page: <span class="page"/> / <span class="topage"/>
              </div>
          </div>
      </div>

    </template>
    <!-- Loyalty Lane [END] -->

