<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--main template-->
        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="givex_esi_report.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <!--translatable template-->
        <template id="report_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="col-6" style="padding-left:6rem">
                    <table class="table table-sm table-bordered" name="invoice_to_table">
                        <thead>
                            <th name="th_bill_to" class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span><b>BILL TO</b></span></th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <t t-if="o.partner_id.company_type == 'company'">
                                        <span t-field="o.partner_id.name"/><br/>
                                    </t>
                                    <t t-elif="o.partner_id.company_type == 'person'">
                                        <span t-field="o.partner_id.parent_id"/><br/>
                                    </t>
                                    <span/><br/>
                                    <span t-field="o.partner_id.street"/><br/>
                                    Attn: <span t-field="o.partner_id.name"/><br/>
                                    <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.country_id.code"/><t></t> <span t-field="o.partner_id.zip"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="page">
                    <table class="table table-sm table-bordered">
                    <thead>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>INVOICE #</span></th>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>DATE</span></th>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>TOTAL DUE</span></th>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>DUE DATE</span></th>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>TERMS</span></th>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>ENCLOSED</span></th>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-field="o.name"/></td>
                            <td><span t-field="o.invoice_date"/></td>
                            <td><span t-field="o.amount_residual"/></td>
                            <td><span t-field="o.invoice_date_due"/></td>
                            <td><span t-field="o.invoice_payment_term_id"/></td>
                            <td><span></span></td>
                        </tr>
                    </tbody>

                    </table>

                    <br/><br/><br/>

                    <table class="table table-sm table-bordered" style="border: 1px solid;">
                    <thead>
                        <th class="text-left" style="background-color:#DCE9F1;color:#4F90BA;"><span>ACTIVITY</span></th>
                        <th class="text-right" style="background-color:#DCE9F1;color:#4F90BA;"><span>QTY</span></th>
                        <th class="text-right" style="background-color:#DCE9F1;color:#4F90BA;"><span>RATE</span></th>
                        <th class="text-right" style="background-color:#DCE9F1;color:#4F90BA;"><span>AMOUNT</span></th>
                    </thead>
                    <tbody>
                       <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" style="background-color:white;">
                                            <span style="font-family:Arial, Helvetica, sans-serif;"><b t-field="line.name" t-options="{'widget': 'text'}"/></span>
                                        </td>
                                    </t>
                                </tr>


                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                    </tbody>

                    </table>
                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="o_subtotal" style="">
                                        <td>BALANCE DUE</td>
                                        <td class="text-right">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
