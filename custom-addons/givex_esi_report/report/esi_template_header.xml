<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[1]" position="replace">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-5 mb4" style="font-family: Arial, Helvetica, sans-serif;">
                         <span><b t-field="company.name"></b></span><br/>
                         <div t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["email", "address"], "no_marker": true}'
                         />
                    </div>
                    <div class="col-2 mb4 ">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;" alt="Logo"/>
                    </div>
                    <div class="col-4 mb4 text-right">
                        <h2>Invoice</h2>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div/div[hasclass('text-center')]" position="replace">
                <div class="text-center">
                </div>
        </xpath>
    </template>
</odoo>