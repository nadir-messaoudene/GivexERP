                    </group>
                   
                </xpath>
            </field>
        </record>

        <record id="transaction_form_bamborachk" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.bamborachk</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.payment_transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Bambora Details" id="bamborachk_details" attrs="{'invisible':  [ ('provider', '!=', 'bamborachk') ]}">
                            <group>
                                <group>
                                    <field name="bamborachk_auth_code"/>
                                    <field name="bamborachk_created"/>
                                    <field name="bamborachk_order_number"/>
                                    <field name="bamborachk_txn_type"/>
                                    <field name="bamborachk_payment_method"/>
                                </group>
                                <group>
                                    <field name="bamborachk_card_type"/>
                                    <field name="bamborachk_last_four"/>
                                    <field name="bamborachk_avs_result"/>
                                    <field name="bamborachk_cvd_result"/>
                                </group>
                            </group>

                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
