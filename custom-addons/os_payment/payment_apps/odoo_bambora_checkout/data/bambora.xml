<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_bambora" model="payment.acquirer">
            <field name="name">Bambora Checkout</field>
            <field name="image_128" type="base64" file="odoo_bambora_checkout/static/description/icon.png"/>
            <field name="display_as">Bambora Checkout</field>
            <field name="code">bamborachk</field>
            <field name="description" type="html">
                <p>Bambora Checkout</p>
                    <ul class="list-inline">
                        <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                        <li class="list-inline-item"><i class="fa fa-check"/>Save Cards</li>
                        <li class="list-inline-item"><i class="fa fa-check"/>Save Cards</li>
                    </ul>
                </field>
            <field name="payment_icon_ids" eval='[(6, 0,[   ref("payment.payment_icon_cc_maestro"),
                                                            ref("payment.payment_icon_cc_mastercard"),
                                                            ref("payment.payment_icon_cc_visa")])]'/>
            <field name="module_id" ref="base.module_odoo_bambora_checkout"/>
            <field name="company_id" ref="base.main_company"/>
            
            <field name="inline_form_view_id" ref="bamborachk_inline_form"/>
            <field name="support_authorization">True</field>
            <field name="support_fees_computation">False</field>
            <field name="support_refund"></field>
            <field name="support_tokenization">True</field>
            <field name="allow_tokenization">True</field>
            <!-- Sandbox Credentials -->
            <field name="bamborachk_merchant_id">300209410</field>
            <field name="bamborachk_payment_api">4D82741A4d8D4783880e1a9bB7847dEa</field>
            <field name="bamborachk_profile_api">67C56693E3444D3380DF8E01BC0A9B96</field>
        </record>

        <record id="payment_method_bamborachk" model="account.payment.method">
            <field name="name">Bambora Checkout</field>
            <field name="code">bamborachk</field>
            <field name="payment_type">inbound</field>
        </record>
        <record id="payment_method_bamborachk_out" model="account.payment.method">
            <field name="name">Bambora Checkout</field>
            <field name="code">bamborachk</field>
            <field name="payment_type">outbound</field>
        </record>
    </data>
</odoo>
