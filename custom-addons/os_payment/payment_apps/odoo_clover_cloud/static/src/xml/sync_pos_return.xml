			<span> </span>
			<span>RtnSeeAllOrdersScreenWidget</span>
		</span>
	</t>

	<t t-extend="SeeAllOrdersButtonWidget">
		<t t-jquery=".control-button .orders-button .highlight" t-operation="replace">
			<span> </span>
		</t>
	</t>

