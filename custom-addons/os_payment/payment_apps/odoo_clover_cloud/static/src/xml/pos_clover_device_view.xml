<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CloverDeviceButtons" owl="1">
    <div class="ticket-button" t-att-class="{ highlight: props.isTicketScreenShown }" t-on-click="onClick">
        <div class="with-badge" t-att-badge="count">
            <!-- <i class="fa fa-ticket" aria-hidden="true"></i> -->
            <!-- <img src="/odoo_clover_cloud/static/description/clover_white.png" alt="Clover" width="20" height="20"/> -->
            <img src="/odoo_clover_cloud/static/description/clover_green.png" alt="Clover" width="20" height="20"/>
        </div>
        <div></div>
    </div>
    </t>

    <t t-inherit="point_of_sale.Chrome" t-inherit-mode="extension">
        <xpath expr="//TicketButton" position="before">
                <CloverDeviceButtons isTicketScreenShown="isTicketScreenShown" />
        </xpath>
        <xpath expr="//TicketButton" position="after">
            <CloverDeviceButtons isTicketScreenShown="isTicketScreenShown" t-if="env.isMobile" />
        </xpath>
    </t>

    <t t-name="CloverDeviceViewWidget" name="Clover Device View Widget" owl="1" >
        <!-- <t t-if="env.pos.config.show_order"> -->
            <span class="control-button orders-button" t-att-class="is_available()?    'highlight' : ''" id="show_pos_order" style="background-color: #7f82ac; color: #fff;">
                <i class="fa fa-university"></i> 
                <span> </span>
                <span>Orders</span>
            </span>
        <!-- </t> -->
    </t>


</templates>