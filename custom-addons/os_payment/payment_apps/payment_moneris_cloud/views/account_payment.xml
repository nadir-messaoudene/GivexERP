     <record id="account_payment_view_moneris" model="ir.ui.view">
         <field name="name">account.payment.tree.moneris</field>
         <field name="model">account.payment</field>
         <field name="type">tree</field>
         <field name="priority" eval="16" />
         <field name="active" eval="True" />
         <field name="arch" type="xml">
             <tree string="Account Payment Moneris" create="true" delete="true" edit="true">
                <field name="date" />
                <field name="name" />
                <field name="journal_id" />
                <field name="payment_method_id" />
                <field name="partner_id" />
                <field name="cloud_is_samecard" />
                <field name="amount" />
                <field name="state" />
                <field name="has_payments" />
                <field name="reconciled_payments_count" />
     
             </tree>
         </field>
     </record>
     
