<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form_moneris" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.moneris</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="use_cloud_terminal" attrs="{'invisible': [('type', '!=', 'bank')] }"/>
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Moneris Cloud Configuration" attrs="{'invisible': [('use_cloud_terminal', '!=', True)]}">
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="cloud_store_id" placeholder="gwcaXXXXXX"
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)], 'required': [('use_cloud_terminal', '=', True)]}"/>
                                <field name="cloud_api_token" placeholder="HhmXXXXXXXXXXXXXkBA"
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)], 'required': [('use_cloud_terminal', '=', True)]}"/>
                                <field name="cloud_terminal_id" placeholder="P1503XXX"
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)], 'required': [('use_cloud_terminal', '=', True)]}"/>
                                <field name="cloud_pairing_token" placeholder="123456 (6 Digits)"
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)], 'required': [('use_cloud_terminal', '=', True)]}"/>
                                <field name="cloud_integration_method"
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)]}"/>
                                <field name="cloud_postback_url" 
                                    attrs="{'invisible': ['|',('use_cloud_terminal', '!=', True), ('cloud_integration_method', 'in', ['polling'])], 'required': [('cloud_integration_method', '=', 'postbackurl')]}"/>
                                <field name="cloud_cloud_environment" 
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)]}" widget="radio"/>
                                <field name="cloud_cloud_paired" 
                                    attrs="{'invisible': [('use_cloud_terminal', '!=', True)]}"/>
                                <button name="cloud_terminal_pair" string="Pair" type="object" class="oe_highlight" 
                                    groups="base.group_erp_manager"
                                    attrs="{'invisible': ['|', ('use_cloud_terminal', '!=', True),'|',('cloud_cloud_environment', '=','disabled'),('cloud_cloud_paired', '=', True)]}"/>
                                <br></br>
                                <button name="cloud_terminal_init" string="Initilization" type="object" class="oe_highlight" 
                                    groups="base.group_erp_manager"
                                    attrs="{'invisible': ['|', ('use_cloud_terminal', '!=', True),'|',('cloud_cloud_environment', '=','disabled'),('cloud_cloud_paired', '=', False)]}"/>
                                <button name="cloud_terminal_unpair" string="Unpair" type="object" class="oe_highlight" 
                                    groups="base.group_erp_manager"
                                    attrs="{'invisible': ['|', ('use_cloud_terminal', '!=', True),'|',('cloud_cloud_environment', '=','disabled'),('cloud_cloud_paired', '=', False)]}"/>
                           
                            </group>
                        </group>
                    </page>


                </xpath>
            </field>
        </record>

    </data>
</odoo>